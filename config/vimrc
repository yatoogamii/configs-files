"""""""""""""""""""""Remapp"""""""""""""""""""""""""
""""""""""""""""""""""""""""""""""""""""""""""""""""

     	map <up> <nop>
     	map <down> <nop>
     	map <left> <nop>
     	map <right> <nop>
     	imap <up> <nop>
     	imap <down> <nop>
     	imap <left> <nop>
     	imap <right> <nop>

     	map ,, <esc>
     	imap ,, <esc>
     
     	map <C-N> :NERDTreeToggle<CR>

